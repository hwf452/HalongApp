<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/pointTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/list_item_left_padding"
        android:text="@string/point"
        android:textColor="@color/black" />
 
    <TextView
        android:id="@+id/partnerTextView"
        style="@style/ListItemTextViewStyle"
        android:layout_marginLeft="@dimen/list_item_left_margin"
        android:layout_toRightOf="@id/pointTextView"
        android:singleLine="true"
        android:text="@string/school" />

</RelativeLayout>