<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/develop_list_item_height"
        android:background="@color/while1"
        android:padding="@dimen/list_item_padding" >

        <ImageView
            android:id="@+id/developImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/picture022" />

        <TextView
            android:id="@+id/developTitleTextView"
            style="@style/ListItemTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/developImageView"
            android:layout_marginLeft="@dimen/list_item_left_margin"
            android:layout_toRightOf="@id/developImageView"
            android:singleLine="true"
            android:text="@string/develop_list_item_title" />

        <TextView
            android:id="@+id/developBodyTextView"
            style="@style/ListItemBodyTextViewStyle"
            android:layout_below="@id/developTitleTextView"
            android:layout_marginLeft="@dimen/list_item_left_margin"
            android:layout_marginRight="@dimen/more_direction_big"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/developImageView"
            android:ellipsize="end"
            android:lines="3"
            android:text="@string/develop_list_item_body" />

        <TextView
            android:id="@+id/developDateTextView"
            style="@style/ListItemDateTextViewStyle"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/imageView"
            android:text="@string/develop_list_item_date" />

        <ImageView
            android:id="@+id/imageView"
            style="@style/MoreItemImageViewStyle"
            android:contentDescription="@drawable/icon_001" />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp" />

</RelativeLayout>