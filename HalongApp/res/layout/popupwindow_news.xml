<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical" >

    <Button
        android:id="@+id/newButton"
        style="@style/PopuwindowNewsStyle"
        android:text="@string/news_new" />

    <Button
        android:id="@+id/cultureButton"
        style="@style/PopuwindowNewsStyle"
        android:text="@string/news_culture" />

    <Button
        android:id="@+id/businessButton"
        style="@style/PopuwindowNewsStyle"
        android:text="@string/news_business" />

    <Button
        android:id="@+id/knowledgeButton"
        style="@style/PopuwindowNewsStyle"
        android:text="@string/news_knowledge" />

    <Button
        android:id="@+id/allnewsButton"
        style="@style/PopuwindowNewsStyle"
        android:text="@string/news_allnews" />

</LinearLayout>