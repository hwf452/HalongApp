<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while1"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/invite_checkbox_height"
        android:orientation="horizontal"
        android:padding="@dimen/invite_checkbox_padding" >

        <CheckBox
            android:id="@+id/leftCheckBox"
            style="@style/ChoiceCheckBox"
            android:background="@drawable/button007_1_selector"
            android:text="@string/develop_product" />

        <CheckBox
            android:id="@+id/rightCheckBox"
            style="@style/ChoiceCheckBox"
            android:background="@drawable/button007_2_selector"
            android:text="@string/develop_technology"
            android:textColor="@color/royal_blue" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line001"
        android:contentDescription="@drawable/line001" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridView
            android:id="@+id/developGridView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/gridview_lose_Spacing"
            android:fadingEdge="none"
            android:horizontalSpacing="@dimen/gridview_Spacing"
            android:listSelector="@android:color/transparent"
            android:numColumns="auto_fit"
            android:columnWidth="@dimen/grid_item_big"
            android:paddingBottom="@dimen/gridview_Spacing"
            android:paddingLeft="@dimen/gridview_Spacing"
            android:paddingRight="@dimen/gridview_Spacing"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/gridview_Spacing" />
    </FrameLayout>

</LinearLayout>